<div class="row">
  <div class="col-lg-12 text-center">
    <h2 class="section-heading text-uppercase">Skills</h2>
  </div>
</div>

<div class="row mb-4">
  <div class="d-flex flex-wrap justify-content-center align-items-start mx-auto">
    <% for (const chart of contents.skills.charts) { %>
      <div class="align-self-stretch js-skills-chart">
        <!-- Chart.js の描画に必要なデータ -->
        <input type="hidden" class="js-skills-chart-data" value="<%- JSON.stringify(chart).replace(/\"/g, "'"); %>">
        <!-- グラフエリア -->
        <canvas class="js-skills-chart-canvas" height="350"></canvas>
      </div>
    <% } %>
  </div>
</div>

<div class="row">
  <div class="col-12 col-sm-11 col-lg-9 mx-auto">
    <table class="table table-borderless">
      <% for (const list of contents.skills.lists) { %>
        <tr>
          <th scope="row" class="text-nowrap">
            <%= list.title %>
          </th>
          <td>
            <% for (const [index, item] of list.values.entries()) { %>
              <% if (typeof item !== 'object') { %>
                <span class="mr-2"><%- item %><%- (index + 1 < list.values.length) ? ',' : '' %></span>
              <% } else { %>
                <div class="mb-2">
                  <% if (item.title) { %>
                    <span><%- item.title.replace(/, /g, ' &nbsp; ' ) %><br></span>
                  <% } %>
                  <% if (item.values) { %>
                  <ul class="ml-4 mb-1 d-inline-flex flex-wrap justify-content-start list-unstyled">
                    <% for (const value of item.values.values()) { %>
                      <li class="mr-2"><%- value %></li>
                    <% } %>
                  </ul>
                  <% } %>
                  <% if (item.badges) { %>
                    <% for (const badge of item.badges.values()) { %>
                      <div data-iframe-width="150" data-iframe-height="270" data-share-badge-id="<%- badge %>" data-share-badge-host="https://www.credly.com"></div>
                    <% } %>
                  <% } %>
                </div>
              <% } %>
            <% } %>
          </td>
        </tr>
      <% } %>
    </table>
  </div>
</div>
