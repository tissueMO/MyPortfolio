    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <% for (const text of contents.beliefs) { %>
        <% if (typeof text === 'string') { %>
          <h4><%- text %></h4>
        <% } else { %>
          <p class="px-lg-5 mx-lg-5">
            <% for (const paragraph of text) { %>
              <%- paragraph %><br>
            <% } %>
          </p>
        <% } %>
      <% } %>
    </div>
  </div>
</div><!-- Beliefs -->

