<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <h2 class="section-heading text-uppercase">About</h2>
    </div>
  </div>
</div>

<!-- Career -->
<div class="container page-section" id="career">
  <div class="row">
    <div class="col-lg-12 text-center">
      <h3 class="text-uppercase"><span class="h3 font-weight-bold">Career</span></h3>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 d-flex justify-content-center">
      <ul class="timeline">
        <% let flip = true; %>
        <% for (const timeline of contents.career) { %>
          <% flip = !flip; %>
          <li class="<%= flip ? 'timeline-inverted' : '' %>">
            <div class="timeline-image">
              <% if (timeline.image.startsWith('<')) { %>
                <%- timeline.image %>
              <% } else { %>
                <img class="rounded-circle img-fluid" src="img/career/<%- timeline.image %>" alt="Career">
              <% } %>
              </div>
            <div class="timeline-panel">
              <div class="timeline-heading">
                <h4><%= timeline.date %></h4>
                <h4 class="subheading"><%= timeline.title %></h4>
              </div>
              <div class="timeline-body">
                <p class="text-muted"><%- timeline.text %></p>
              </div>
            </div>
          </li>
        <% } %>

        <% flip = !flip; %>

        <li class="<%= flip ? 'timeline-inverted' : '' %>">
          <div class="timeline-image">
            <img class="rounded-circle img-fluid" src="img/career/career-e.png" alt="Career">
          </div>
          <div class="timeline-panel">
            <div class="timeline-heading">
              <h4 class="subheading">そして、現在に至る</h4>
            </div>
            <div class="timeline-body">
              <p class="text-muted">さらなる高みを目指して奮闘中。</p>
            </div>
          </div>
        </li>
      </ul>
    </div>
  </div>
</div><!-- Career -->

<!-- Beliefs -->
<div class="container page-section" id="beliefs">
